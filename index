<body>
  <h1>Tap Challenge Game</h1>
  <div id="instructions">
    üéØ <b>Instructions:</b> Tap at least <b>4 different colored circles</b> within 30 seconds to win. <br>
    ‚úÖ Win: Pay 20 Birr. <br>
    ‚ùå Lose: Pay 30 Birr. <br>
    Tap as fast as you can ‚Äî Good luck!
  </div>
  <div id="score">Score: 0</div>
  <div id="timer">Time: 30</div>
  <button id="startBtn">Start Game</button>
  <div id="gameArea"></div>

  <footer>Game by Yishak Gugsa</footer>

  <script>
    let score = 0;
    let timeLeft = 30;
    let gameInterval;
    let timerInterval;
    let colorsTapped = new Set();

    const scoreDisplay = document.getElementById('score');
    const timerDisplay = document.getElementById('timer');
    const gameArea = document.getElementById('gameArea');
    const startBtn = document.getElementById('startBtn');

    function startGame() {
      score = 0;
      colorsTapped.clear();
      timeLeft = 30;
      scoreDisplay.textContent = `Score: ${score}`;
      timerDisplay.textContent = `Time: ${timeLeft}`;
      startBtn.disabled = true;

      timerInterval = setInterval(() => {
        timeLeft--;
        timerDisplay.textContent = `Time: ${timeLeft}`;
        if (timeLeft <= 0) {
          endGame();
        }
      }, 1000);

      gameInterval = setInterval(() => {
        spawnCircle();
      }, 1000); // Slower speed for playability
    }

    function spawnCircle() {
      const circle = document.createElement('div');
      circle.classList.add('circle');
      const color = getRandomColor();
      circle.style.backgroundColor = color;
      circle.style.top = Math.random() * (gameArea.clientHeight - 50) + 'px';
      circle.style.left = Math.random() * (gameArea.clientWidth - 50) + 'px';

      circle.onclick = function () {
        score++;
        colorsTapped.add(color);
        scoreDisplay.textContent = `Score: ${score}`;
        gameArea.removeChild(circle);
      };

      gameArea.appendChild(circle);

      setTimeout(() => {
        if (gameArea.contains(circle)) {
          gameArea.removeChild(circle);
        }
      }, 800);
    }

    function getRandomColor() {
      const colors = ['red', 'blue', 'green', 'orange', 'purple', 'pink'];
      return colors[Math.floor(Math.random() * colors.length)];
    }

    function endGame() {
      clearInterval(gameInterval);
      clearInterval(timerInterval);
      startBtn.disabled = false;
      alert(`Game Over! Your score is ${score} and you tapped ${colorsTapped.size} unique colors.`);
      if (colorsTapped.size >= 4) {
        alert('You Win! Pay 20 Birr.');
      } else {
        alert('You Lose! Pay 30 Birr.');
      }
    }

    startBtn.addEventListener('click', startGame);
  </script>
</body>
